<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEEEEE">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="@dimen/overall_margin"
        app:cardBackgroundColor="#FAFAFA"
        card_view:cardCornerRadius="4dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/globeGritScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:hint="2.7"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/globeGritName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:hint="UserNAme"
                android:textColor="@color/textColorMain"
                android:textSize="@dimen/textsize_main"
                app:layout_constraintLeft_toRightOf="@+id/globeGritScore"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.75" />

            <TextView
                android:id="@+id/globeGritSurvey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Grit Surver Result"
                app:layout_constraintLeft_toLeftOf="@+id/globeGritName"
                app:layout_constraintRight_toRightOf="@+id/globeGritName"
                app:layout_constraintTop_toBottomOf="@+id/globeGritName" />

            <TextView
                android:id="@+id/globeupdateScire"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/globeGritScore"
                android:layout_alignStart="@+id/globeGritScore"
                android:layout_below="@+id/globeGritScore"
                android:layout_marginTop="8dp"
                android:hint="globeUpdateScore"
                android:textColor="@color/textColorMain"
                android:textSize="12sp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/globeGritSurvey"
                app:layout_constraintRight_toRightOf="@+id/globeGritSurvey"
                app:layout_constraintTop_toBottomOf="@+id/globeGritSurvey"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.571" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
